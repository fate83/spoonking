<% unless @errors %>
  <%= turbo_stream.update dom_id(current_user) do %>
    <%= render partial: 'application/user' %>
  <% end %>
  <%= turbo_stream.update 'convert_errors' do %>
    Converted <%= @sand_amount %> Sand to EXP
  <% end %>
<% else %>
  <%= turbo_stream.update 'convert_errors' do %>
    <% @errors.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>
<% end %>
